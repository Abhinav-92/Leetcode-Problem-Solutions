class Solution {
public:
    int solve(vector<int> &arr, int k, int ind){
        int n = arr.size();
        if(ind >= n) return 0;

        int mx = 0, ans = 0;
        for(int i=ind; i<min(ind+k, n); i++){
            mx = max(mx, arr[i]);
            ans = max(ans, (i - ind + 1)*mx + solve(arr, k, i+1));
        }
        return ans;
    }
    int maxSumAfterPartitioning(vector<int>& arr, int k) {
        return solve(arr, k, 0);
    }
};
