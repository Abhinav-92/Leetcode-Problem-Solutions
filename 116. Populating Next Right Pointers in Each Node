class Solution {
public:
    Node* connect(Node* root) {
        queue<Node *>q;
        q.push(root);
        if(!root) return NULL;
        while(!q.empty()){
            int n=q.size();
            while(n--){
                Node * curr=q.front();
                q.pop();
                if(n==0){
                    curr->next=NULL;
                }
                else{
                    curr->next=q.front();
                }
                if(curr->left){
                    q.push(curr->left);
                }
                if(curr->right){
                    q.push(curr->right);
                }
            }
        }
        return root;
    }
};
